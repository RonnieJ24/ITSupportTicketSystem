@{
    ViewBag.Title = "Project Chart";
}

<h2>Project Chart</h2>

<div style="width: 80%; margin: 0 auto;">
    <canvas id="projectChart" width="400" height="200"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Retrieve chart data from ViewBag
    var labels = @Html.Raw(ViewBag.ChartLabels);
    var ticketCounts = @Html.Raw(ViewBag.ChartTicketCounts);
    var requesterNames = @Html.Raw(ViewBag.ChartRequesterNames);

    // Create a bar chart
    var ctx = document.getElementById('projectChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Ticket Count',
                data: ticketCounts,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                }
            }
        }
    });

    // Display Requested By
    chart.options.plugins.tooltip = {
        callbacks: {
            label: function (context) {
                var label = context.dataset.label || '';
                if (label) {
                    label += ': ';
                }
                if (context.parsed.y !== null) {
                    label += context.parsed.y;
                }
                if (requesterNames[context.parsed.x] !== "") {
                    label += ' (Requested By ' + requesterNames[context.parsed.x] + ')';
                }
                return label;
            }
        }
    };
</script>

<div style="text-align: center; margin-top: 20px;">
    <a href="@Url.Action("ReceivedTickets", "Ticket")" class="btn btn-primary">Back to Received Tickets</a>
</div>
